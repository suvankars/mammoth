- model_class = PurchaseOrder
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:due_date)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:phone_number)
      %th= model_class.human_attribute_name(:po_number)
      %th= model_class.human_attribute_name(:procurement_status)
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:tax_inclusive)
      %th= model_class.human_attribute_name(:message)
      %th= model_class.human_attribute_name(:supplier_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @purchase_orders.each do |purchase_order|
      %tr
        %td= link_to purchase_order.id, purchase_order_path(purchase_order)
        %td= purchase_order.due_date
        %td= purchase_order.email
        %td= purchase_order.phone_number
        %td= purchase_order.po_number
        %td= purchase_order.procurement_status
        %td= purchase_order.status
        %td= purchase_order.tax_inclusive
        %td= purchase_order.message
        %td= purchase_order.supplier_id
        %td=l purchase_order.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_purchase_order_path(purchase_order), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), purchase_order_path(purchase_order), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_purchase_order_path, :class => 'btn btn-primary'
