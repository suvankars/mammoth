- model_class = PurchaseOrder
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:due_date) + ':'
  %br
  = @purchase_order.due_date
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @purchase_order.email
%p
  %strong= model_class.human_attribute_name(:phone_number) + ':'
  %br
  = @purchase_order.phone_number
%p
  %strong= model_class.human_attribute_name(:po_number) + ':'
  %br
  = @purchase_order.po_number
%p
  %strong= model_class.human_attribute_name(:procurement_status) + ':'
  %br
  = @purchase_order.procurement_status
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @purchase_order.status
%p
  %strong= model_class.human_attribute_name(:tax_inclusive) + ':'
  %br
  = @purchase_order.tax_inclusive
%p
  %strong= model_class.human_attribute_name(:message) + ':'
  %br
  = @purchase_order.message
%p
  %strong= model_class.human_attribute_name(:supplier_id) + ':'
  %br
  = @purchase_order.supplier_id


= link_to t('.back', :default => t("helpers.links.back")), purchase_orders_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_purchase_order_path(@purchase_order), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), purchase_order_path(@purchase_order), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
