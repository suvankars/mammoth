= simple_form_for @purchase_order, :html => { :class => 'form-horizontal' } do |f|
  = f.input :due_date
  = error_span(@purchase_order[:due_date])
  = f.input :email
  = error_span(@purchase_order[:email])
  = f.input :phone_number
  = error_span(@purchase_order[:phone_number])
  = f.input :po_number
  = error_span(@purchase_order[:po_number])
  = f.input :procurement_status
  = error_span(@purchase_order[:procurement_status])
  = f.input :status
  = error_span(@purchase_order[:status])
  = f.input :tax_inclusive
  = error_span(@purchase_order[:tax_inclusive])
  = f.input :message
  = error_span(@purchase_order[:message])
  = f.input :supplier_id
  = error_span(@purchase_order[:supplier_id])
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), purchase_orders_path, :class => 'btn btn-default'
